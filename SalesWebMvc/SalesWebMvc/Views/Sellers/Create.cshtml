@*Indica que essa View tem a sua disposição o Atributo "Seller"*@
@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Cadastrar novo vendedor";
}

<h2> @ViewData["Title"] </h2>

@*Passar uma linha**@
<hr />

@*Div. Divisão em 12 partes. SEMPRE uma coluna dentro de uma linha*@
@*Linha*@
<div class="row">
    @*Div - Col*@
    <div class="col-md-4">
        @*Formulário*@
        @*Ao enviar o formulário, ele chamará o método Create. Mas não o Create GET, mas sim o Create POST*@
        <form asp-action="Create">
            @*Nome*@
            <div class="form-group">
                @*Nome do label que vai aparecer na caixa de texto pro usuário digitar*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            @*Email*@
            <div class="form-group">                
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            @*Data de aniversário*@
            <div class="form-group">                
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>

            @*Salário base*@
            <div class="form-group">                
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>

            @*Botão de "Cadastrar"*@
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
